{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "ESNext",                                  /* Set to ESNext for modern JS output */
    "module": "CommonJS",                                 /* Use CommonJS for node compatibility */
    "moduleResolution": "node",                           /* Enable module resolution like Node.js */
    "rootDir": "src",                                     /* Specify the root directory of the source code */
    "outDir": "dist",                                     /* Specify the output directory for compiled code */
    "esModuleInterop": true,                              /* Enable default import compatibility */
    "strict": true,                                       /* Enable all strict type-checking options */
    "forceConsistentCasingInFileNames": true,              /* Ensure file name case consistency */
    "skipLibCheck": true,                                 /* Skip type checking for all libraries */
    "noEmit": false,                                      /* Ensure we emit compiled files to the output directory */
    "resolveJsonModule": true,                            /* Allow importing .json files */
    "baseUrl": ".",                                       /* Specify the base directory for non-relative imports */
    "paths": {
      "@services/*": ["src/services/*"],
      "@routes/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*", "types/**/*.d.ts"],
  "exclude": [
    "node_modules",                                      /* Exclude node_modules */
    "dist"                                               /* Exclude compiled output directory */
  ]
}
